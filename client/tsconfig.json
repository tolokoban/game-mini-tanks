{
    "compilerOptions": {
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "client/src",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "diagnostics": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "extendedDiagnostics": false,
        "incremental": false,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "ES2022.Array"],
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "outDir": "./dist/",
        "paths": {
            "@/*": ["*"],
            "*": ["client/src/*", "node_modules/*"]
        },
        "preserveWatchOutput": false,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "ES2020"
    },
    "output": ["./dist"],
    "files": ["client/src/index.tsx"],
    "include": [
        "client/src/**/*.mdx",
        "client/src/**/*.ts",
        "client/src/**/*.tsx",
        "client/src/**/*.css",
        "client/src/**/*.svg",
        "client/src/**/*.png",
        "client/src/**/*.jpg",
        "client/src/**/*.jpeg",
        "client/src/**/*.gif",
        "client/src/**/*.webp"
, "server/main.ts"    ],
    "exclude": [
        "_backup_/",
        "node_modules/",
        "**/*.spec.*",
        "**/*.test.*",
        "**/*.SKIP.*"
    ]
}
